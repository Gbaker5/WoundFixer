<%- include('partials/header') -%>
  <div class="container">
    <div class="col-12">
      <h2>All Wounds</h2>
    </div>
    
    <div>
      <label for=""></label>
      <select name="" id="" onchange="javascript:location.href = this.value;">
        <option selected value="/wound/allWounds"><a href="">Most Recent(Default)</a></option>
        <option value="/wound/woundsZtoA">Oldest</option>
        <option value="/wound/woundsPatient"><a href="">Patient(A-Z)</a></option>
        <option selected value="/wound/woundsPatientZtoA"><a href="">Patient(Z-A)</a></option>
      </select>
    </div>

    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<wounds.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <div class="woundbox">
              <div class="boxcolor">
                <div class="boxshadow">
                <div class="anotherbox">
                
                <div class="sortedby">
                  <strong><p id="woundname">Patient:<%=lastNames[i]%>,<%=firstNames[i]%></p></strong>
                </div>
                
                <p>Time Created: <%= wounds[i].createdAt%></p>
                <p>Type:<%=wounds[i].Type%></p>
                <p>Location:<%=wounds[i].Location%></p>
                <p>Length:<%=wounds[i].Length%></p>
                <p>Width:<%=wounds[i].Width%></p>
                <p>Depth:<%=wounds[i].Depth%></p>
                <p>Odor:<%=wounds[i].Odor%></p>
                <p>Description:<%=wounds[i].Description%></p>
                <p>Intervention:<%=wounds[i].Intervention%></p>
              </div> 
              </div>
              </div>
            </div>
            <!--<a href="/post/<%= wounds[i]._id%>">
              <img class="img-fluid" src="<%= wounds[i].image%>">
            </a>-->
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>