<%- include('partials/header') -%>
<div class="newcontainer">
    <div class="shadow2">

        <div>

            <div class="row user-info blackback whitetext halfover">
                <h2>Update Patient Profile</h2>
            </div>
            <div class="imgUpName">
                <h3><%=patient.lastName%>, <%=patient.firstName%></h3>
            </div>
            <div class="profileUpdateBox col-12 mt-5">
                <div>

                
                <!--If current image exists then display-->
                <% if (ptImg) { %>
                    <div class="ptImg-ct2 upd-ct">
                      <img src="<%= ptImg.Image %>" alt="Pt Img" class="ptImg2">
                      <p>Current Image</p>
                    </div>
                  <% } else { %>
                    <p>No image uploaded yet.</p>
                  <% } %>
                <!--Else display "no current image"-->
                </div>

                <!--Field Error logic-->
                <div class="profileUpdate-ct ">
                    <form class="" action="/physicianP/<%=patient._id%>/updatePtProfile?_method=PUT" method="POST">
                        <div class="formtop">
                            <label for="age">Age</label>
                            <input type="text" name="age">

                            <label for="Height">Height</label>
                            <input type="text" name="height">

                            <label for="Weight">Weight</label>
                            <input type="text" name="weight">

                            <label for="Allergies">Allergies</label>
                            <input type="text" name="allergies">
     
                          
     
                            
                        </div>
                        <div class="formbottom">
                           
                            <label for="Gender">Gender</label>
                            <select name="gender" id="">
                                <option value="female">female</option>
                                <option value="male">male</option>
                            </select>
                            
     
                            <label for="Race">Race</label>
                            <select name="race" id="">
                                <option value="African-American">African-American</option>
                                <option value="Native-American">Native-American</option>
                                <option value="Asian">Asian</option>
                                <option value="Caucasian">Caucasian</option>
                            </select>
                           

                            <label for="Mobility">Mobility</label>
                            <select name="mobility" id="">
                             <option value="Ambulatory">Ambulatory</option>
                             <option value="Wheelchair">Wheelchair</option>
                             <option value="Bed Bound">Bed Bound</option>
                            </select>


                            <label for="Smoker">Smoker</label>
                            <select name="smoker" id="">
                             <option value="no">no</option>
                             <option value="yes">yes</option>
                            </select>
                        </div>
                      

                       
                       
                       <button type="submit" class="profileUpdateBtn">Submit</button>
                        
                    </form>
                    <!--Field Error -->
                </div>
                

            </div>

        </div>
    </div> <!--shadow2-->
</div> <!--newcontainer-->
<%- include('partials/footer') -%>